<script>
const decrease = (price, stock, index, pId) => {
    let quantity = Number(document.getElementById(`qty${index}`).value);
    quantity--;
    if (quantity < 1) {
        quantity = 1;
        Swal.fire(
            "Warning",
            "Quantity cannot be less than 1",
            "warning"
        );
    } else {
        axios.get(`/decreaseCart?index=${index}`)
            .then((response) => {
                const data=response.data
                if (data) {
                    let subtotal = Number(quantity) * Number(price);
					document.getElementById(`subtotal${index}`).textContent = `₹ ${subtotal.toFixed(2)}`;
                    document.getElementById(`qty${index}`).value = quantity;
                    const total = Number(document.getElementById("total").textContent);
                    document.getElementById("total").textContent = `${(Number(total) - Number(price)).toFixed(2)}`;
                } else {
                    Swal.fire(
                        "Error",
                        "Oops!! Something went wrong",
                        "error"
                    );
                }
            })
            .catch((error) => {
                console.error(error); // Log the error
               
            });
    }
}


const increase = (price, stock, index, pId) => {
    let quantity = Number(document.getElementById(`qty${index}`).value);
    quantity++;
    if (quantity > 5) {
        quantity--;
        Swal.fire(
            "Sorry",
            "You can't buy more than 5 quantity",
            "warning"
        );
    } else if (quantity > stock) {
        quantity = stock;
        Swal.fire(
            "Warning",
            "You have reached maximum available quantity",
            "warning"
        );
    } else {
        axios.get(`/increaseCart?index=${index}`)
            .then((response) => {
                const data = response.data;
                if (data) {
                    let subtotal = Number(quantity) * Number(price);
                    document.getElementById(`subtotal${index}`).textContent = `₹ ${subtotal.toFixed(2)}`;
                    document.getElementById(`qty${index}`).value = quantity;
                    const total = Number(document.getElementById("total").textContent);
                    document.getElementById("total").textContent = `${(Number(total) + Number(price)).toFixed(2)}`;
                } else {
                    Swal.fire(
                        "Error",
                        "Oops!! Something went wrong",
                        "error"
                    );
                }
            })
            .catch((error) => {
                console.error(error); // Log the error
              
            });
    }
};	

    function removeFromCart(index) {
        Swal.fire({
            title: "Are you Sure?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Remove",
            cancelButtonText: "Cancel"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/removeFromCart?index=${index}`, {
                    method: 'GET'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: "Removed",																	
                            text: "Product removed from cart successfully",
                            icon: "success",
                            confirmButtonText: "Ok"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                location.reload(); // Reload the page to reflect changes
                            }
                        });
                    } else {
                        Swal.fire("Error", "Oops! Something went wrong", "error");
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire("Error", "Oops! Something went wrong", "error");
                });
         }
        }).catch(error => {
            console.error('Error:', error);
            Swal.fire("Error", "Oops! Something went wrong", "error");
        });
    }	

	const checkStock=()=>{
		axios.get("/checkStock")
		.then((response)=>{
			if(response.data.success){
				location.href="/checkout"
			}else{
				Swal.fire({
                title: "Warning",
                text: response.data.message,
                icon: "warning",
                confirmButtonText: "Ok"
              }

            )
			.then((result)=>{
				if(result.isConfirmed){
					window.location.reload();
				}
			})

			}
		})
		.catch((error)=>{
		"Error",
        "Oops..Something went wrong",
        "error"
		})
	}

  </script>


		
