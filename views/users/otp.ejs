<script>
  document.addEventListener("DOMContentLoaded", () => {
      let countdownElement = document.getElementById("countdown");
      let resendText = document.getElementById("resendText");
      let timer = document.getElementById("timer");
      let errorMessage = document.getElementById("errorMessage");
      let countdown = 30;
      let interval;

      function startCountdown() {
          countdown = 30;
          countdownElement.textContent = countdown;
          interval = setInterval(() => {
              countdown--;
              countdownElement.textContent = countdown;
              if (countdown <= 0) {
                  clearInterval(interval);
                  timer.style.display = "none";
                  resendText.style.display = "block";
              }
          }, 1000);
      }

      startCountdown();

      document.getElementById("resendLink").addEventListener("click", (e) => {
          e.preventDefault();

          // fetch request to resend OTP
          fetch('/resendOtp', {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json'
              },
              body: JSON.stringify({ userId: '<%= locals.userId %>' })  // Include any data needed by your backend
          })
          .then(response => response.json())
          .then(data => {
              if (data.success) {
                  alert('New OTP sent!');
                  timer.style.display = "block";
                  resendText.style.display = "none";
                  startCountdown();
              } else {
                  alert('Failed to send OTP. Please try again.');
              }
          })
          .catch(error => {
              console.error('Error resending OTP:', error);
              alert('Error resending OTP. Please try again.');
          });
      });

      document.getElementById("otpForm").addEventListener("submit", (e) => {
          e.preventDefault();

          // Clear previous error message
          errorMessage.textContent = "";

          // fetch request to verify OTP
          fetch('/otp', {
              method: 'POST',
              headers: {
                  'Content-Type': 'application/json'
              },
              body: JSON.stringify({ otp: document.getElementById("otp").value })
          })
          .then(response => response.json())
          .then(data => {
              if (data.success) {
                  // Handle successful OTP verification (e.g., redirect to another page)
                  window.location.href = "/";  // Adjust to your success page
              } else {
                  // Show error message on the same page
                  errorMessage.textContent = data.message || "Invalid OTP. Please try again.";
              }
          })
          .catch(error => {
              console.error('Error verifying OTP:', error);
              errorMessage.textContent = "An error occured. Please try again.";
          });
      });
  });
</script>
