                        </div>
                        <div class="one-eight text-center px-4">
                          <span></span>
                        </div>
                      </div>
          
                      <div id="orderItemsContainer">
						<% orders.forEach((order,item)=> { %>
		
						  <div class="product-cart d-flex" id="orderItemContainer<%= order._id %>">
							<div class="one-forth" style="display: flex; justify-content: space-between;">
							  <div>
							  <div class="product-img"
								style="background-image: url('/static/userImages/images/<%= order.items[0].image %>');">
							  </div>
							  <div class="display-tc">
								<span style="margin-left: 30px; color: black">Order id: <%= order.orderId %></span><br>
								<span style="margin-left: 30px;" class="price">Items: <%= order.items.length %>
								</span><br>
								<span style="margin-left: 30px;" class="price">Date: <%- new
									Date(order.date).toLocaleDateString() %></span><br>
							  </div>
							</div>
<!-- 		
							  <div style="align-self: center;">
								<% if(order.paymentMethod!="COD" && order.paymentStatus=="Pending"){ %>
								<button>pay now</button>
								<% } %>
							  </div>  -->
							</div>
							<div class="one-eight text-center">
							  <div class="display-tc">
								<span class="price">₹ <%= order.totalPrice %></span>
							  </div>
							</div>
							<div class="one-eight text-center">
							  <div class="display-tc">
								<span class="price" style="color: orange;">
								  <%= order.paymentStatus %>
								</span>

							  </div>
							</div>
							<div class="one-eight text-center">
							  <div class="display-tc">
								<span class="price" style="color: orange;">
									<% if(order.items.every(item => item.itemStatus === "Delivered" || item.itemStatus === "Cancelled"|| item.itemStatus ==="Returned")) { %>
										<%= order.status = "Completed" %>
									  <% } else { %>
										<%= order.status = "Pending" %>
									  <% } %>		
								</span>
							  </div>
							</div>
							<div class="one-eight text-center">
							  <div class="display-tc">
								<span class="price" id="total${item._id}">
								  <%= order.paymentMethod=="ONLINE_PAYMENT" ? "Online" : order.paymentMethod %>
								</span>

							  </div>
							</div>
							<!-- <div class="one-eight text-center">
							  <div class="display-tc">
								<button class="editDltBtn" address-id=""
								  style="border-color: rgb(250, 141, 141); color: rgb(250, 141, 141); background-color: white;">Cancel</button>
							  </div>
							</div> -->
							<div class="one-eight text-center">
							  <div class="display-tc">
								<a href="myOrders/orderDetails?orderId=<%= order._id%>"style="border-color: black; padding: 5px; color: blue; background-color: white;">View more</a>
							  </div>
							</div>
						  </div>
		
						  <% }) %>
					  </div>
